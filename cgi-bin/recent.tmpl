<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
 <head>
  <title>Recent Spam</title>
    <meta http-equiv="refresh" content="62" />
    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" charset="utf-8">
            $(function(){
                //
                // Make each entry cell link to the URL
                $("div.entry").click(
                        function()
                        {
                            window.location = $(this).attr("url");
                            return false;
                        });
            });

         </script>
<style type="text/css">
.entry {
        border: 1px solid grey;
        padding-top: 1px;
        padding-bottom:1px;
}
.entry:hover {
        cursor:pointer;
        background: silver;
        border: 1px solid black;
}
.entry .title {
        font-size: 140%;
}
.entry .details {
        margin-left: 20px;
}
.spacer {
        padding: 2px;
}
</style>
 </head>
 <body>
 <h1>Recent Spam</h1>
<!-- tmpl_if name='entries' -->
<blockquote>
 <!-- tmpl_loop name='entries' -->
<div class="entry" url="/cgi-bin/quarantine.cgi?domain=<!-- tmpl_var name='domain' escape='html' -->;passwd=<!-- tmpl_var name='passwd' escape='html' -->;file=<!-- tmpl_var name='file' -->">
  <div class="title"><a href="/cgi-bin/quarantine.cgi?domain=<!-- tmpl_var name='domain' escape='html' -->;passwd=<!-- tmpl_var name='passwd' escape='html' -->;file=<!-- tmpl_var name='file' -->"><!-- tmpl_var name='subject' escape='html' --></a></div>
  <div class="details">
   From <!-- tmpl_var name='from' escape='html' --> to &lt;<!-- tmpl_var name='to' escape='html' -->@<!-- tmpl_var name='domain' escape='html' -->&gt;
  </div>
</div>
  <div class="spacer">&nbsp;</div>
 <!-- /tmpl_loop -->
</blockquote>
<!-- tmpl_else -->
 <p>No recent SPAM.</p>
<!-- /tmpl_if -->

 </body>
</html>
